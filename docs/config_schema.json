{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CNC Pulse Monitor Config",
  "type": "object",
  "properties": {
    "wifi": {
      "type": "object",
      "properties": {
        "ssid": {"type": "string"},
        "password": {"type": "string"}
      }
    },
    "thresholds": {
      "type": "object",
      "properties": {
        "vibration_warn": {"type": "number"},
        "vibration_alarm": {"type": "number"},
        "spindle_temp_warn": {"type": "number"},
        "spindle_temp_alarm": {"type": "number"}
      }
    },
    "snapshot_minutes": {"type": "integer"},
    "mqtt": {
      "type": "object",
      "properties": {
        "host": {"type": "string"},
        "port": {"type": "integer"},
        "topic": {"type": "string"}
      }
    }
  }
}
