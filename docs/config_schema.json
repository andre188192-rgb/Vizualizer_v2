{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CNC Pulse Monitor Config",
  "type": "object",
  "properties": {
    "wifi": {
      "type": "object",
      "properties": {
        "ssid": {"type": "string"},
        "password": {"type": "string"}
      }
    },
    "thresholds": {
      "type": "object",
      "properties": {
        "vibration_warn": {"type": "number"},
        "vibration_alarm": {"type": "number"},
        "vibration_reset": {"type": "number"},
        "spindle_temp_warn": {"type": "number"},
        "spindle_temp_alarm": {"type": "number"},
        "spindle_temp_reset": {"type": "number"}
      }
    },
    "snapshot_minutes": {"type": "integer"},
    "mqtt": {
      "type": "object",
      "properties": {
        "host": {"type": "string"},
        "port": {"type": "integer"},
        "topic": {"type": "string"}
      }
    },
    "logging": {
      "type": "object",
      "properties": {
        "interval_ms": {"type": "integer"},
        "sd_warn_percent": {"type": "integer"}
      }
    },
    "pins": {
      "type": "object",
      "properties": {
        "flow_pin": {"type": "integer"},
        "ground_pin": {"type": "integer"},
        "relay_pin": {"type": "integer"},
        "ds18b20_pin": {"type": "integer"},
        "acs712_pin": {"type": "integer"},
        "pzem_rx": {"type": "integer"},
        "pzem_tx": {"type": "integer"},
        "mpu_sda": {"type": "integer"},
        "mpu_scl": {"type": "integer"}
      }
    }
  }
}
